                        </el-table-column>
                        <el-table-column prop="ruleName"
                                         label="名称"
                                         align="center"
                                         show-overflow-tooltip>
                        </el-table-column>
                        <el-table-column prop="ruleRemark"
                                         label="说明"
                                         align="center"
